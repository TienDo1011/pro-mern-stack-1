{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "node": true,
    "jest": true,
    "browser": true
  },
  "rules": {
    "no-underscore-dangle": "off",
    "react/no-did-mount-set-state": "off",
    "no-param-reassign": ["error", { "props": false }],
    "no-console": ["off"],
    "arrow-body-style": ["error", "as-needed"]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
    },
    "sourceType": "module"
  }
}
